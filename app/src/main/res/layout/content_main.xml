<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="test.mobile.richhr.com.butterknife.MainActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffe8e8e8"
        android:textSize="18sp"
        android:text="text1" />

    <TextView
        android:id="@+id/text2"
        android:layout_below="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="text2" />

    <Button
        android:id="@+id/action"
        android:text="Button"
        android:layout_below="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/action1"
        android:text="Button1"
        android:layout_below="@+id/action"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/action2"
        android:text="Button2"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/action1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/action3"
        android:text="Start MapActivity"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/action2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/action4"
        android:text="SlideLeft"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/action3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/action5"
        android:text="Get Time"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/action4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/action6"
        android:text="Change TextView"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/action5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/action7"
        android:text="StartActivity"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/action6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
